@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "All Employees";
}




<div class="bg-light border rounded shadow shadow-sm p-3  ">
    
    @if (TempData ["Message"] is not null)
    {
        
    <div id="message" class="alert alert-success">
        @TempData["Message"]
    </div>
    }



<h1 class="text-center">All Employees</h1>
<a asp-action="create" class="btn btn-success mb-3">Create New Employee</a>
@if (Model.Count() > 0)
{

    <table class="table tabble-striped table-hover text-lg-center  ">

        <thead>
            <tr>
                 <th>@Html.DisplayNameFor(E => E.Name)</th>
                 <th>@Html.DisplayNameFor(E => E.Age)</th>
                 <th>@Html.DisplayNameFor(E => E.Salary)</th>
                 <th>@Html.DisplayNameFor(E => E.Department)</th>
                 <th>@Html.DisplayNameFor(E => E.Address)</th>
                 <th>@Html.DisplayNameFor(E => E.Email)</th>
                 <th>@Html.DisplayNameFor(E => E.PhoneNumber)</th>
                 <th>@Html.DisplayNameFor(E => E.HireDate)</th>
                 <th>@Html.DisplayNameFor(E => E.IsActve)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {

                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                        <td>@Html.DisplayFor(E => employee.Salary)</td>
                        <td>@Html.DisplayFor(E => employee.Department.Name)</td>
                    <td>@employee.Address</td>
                        <td>@Html.DisplayFor(E => employee.Email)</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@employee.HireDate</td>
                    <td>
                        @if(employee.IsActve == true){
                        
                            <i class="fa-solid fa-circle" style="color :green"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle" style="color :red"></i>

                        }
                        </td>
                   
                    <partial name="_ButtonsParialView" model="@employee.Id"/>

                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">

        <h2> There Is No Employees </h2>
    </div>
}
</div>

