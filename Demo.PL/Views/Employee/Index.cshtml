@model IEnumerable<Employee>
@{
    ViewData["Title"] = "All Employees";
}
<div class="bg-light border rounded shadow shadow-sm p-3">
<h1 class="text-center">All Employees</h1>
<a asp-action="create" class="btn btn-success mb-3">Create New Employee</a>
@if (Model.Count() > 0)
{

    <table class="table tabble-striped table-hover ">

        <thead>
            <tr>
                 <th>@Html.DisplayNameFor(E => E.Name)</th>
                 <th>@Html.DisplayNameFor(E => E.Age)</th>
                 <th>@Html.DisplayNameFor(E => E.Salary)</th>
                 <th>@Html.DisplayNameFor(E => E.Address)</th>
                 <th>@Html.DisplayNameFor(E => E.Email)</th>
                 <th>@Html.DisplayNameFor(E => E.PhoneNumber)</th>
                 <th>@Html.DisplayNameFor(E => E.HireDate)</th>
                 <th>@Html.DisplayNameFor(E => E.IsActve)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {

                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Salary</td>
                    <td>@employee.Address</td>
                    <td>@employee.Email</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@employee.HireDate</td>
                    <td>@employee.IsActve</td>
                    <td><a class="btn btn-outline-info" asp-action="Details" asp-route-id="@employee.Id"><i class="fas fa-eye"></i> Details </a></td>
                    <td><a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@employee.Id"><i class="fas fa-edit"></i> Edit </a></td>
                    <td><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@employee.Id"><i class="fas fa-trash"></i> Delete </a></td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">

        <h2> There Is No Employees </h2>
    </div>
}
</div>
